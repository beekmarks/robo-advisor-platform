# Copy to .env and adjust values as needed for local development

# =====================
# LLM / AI Providers
# =====================
OPENAI_API_KEY=
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=us-east-1-aws
OPENAI_MODEL=gpt-3.5-turbo
LLM_TIMEOUT_SECONDS=15

# ================
# Authentication
# ================
JWT_SECRET=change-me-in-dev

# =============================
# Datastores (Compose defaults)
# =============================
DATABASE_URL=postgresql://user:password@postgres:5432/roboadvisor
REDIS_URL=redis://redis:6379

# ==================================
# Service runtime configuration
# ==================================
# Used by rebalancing-service to call dependencies
MARKET_DATA_URL=http://market-data-service:8082
TRADE_EXECUTION_URL=http://trade-execution-service:8086
MIN_TRADE_USD=10

# ==================================
# Frontend (Create React App)
# ==================================
# These variables are exposed to the browser; only put non-sensitive URLs here.
REACT_APP_USER_SERVICE_URL=http://localhost:8080
REACT_APP_MARKET_DATA_SERVICE_URL=http://localhost:8082
REACT_APP_PORTFOLIO_SERVICE_URL=http://localhost:8083
REACT_APP_REBALANCING_SERVICE_URL=http://localhost:8084
REACT_APP_LLM_SERVICE_URL=http://localhost:8085
REACT_APP_TRADE_EXECUTION_SERVICE_URL=http://localhost:8086

# =====================
# Optional data vendors
# =====================
ALPHA_VANTAGE_API_KEY=
POLYGON_API_KEY=

# ================
# Dev experience
# ================
TESTING=false
LOG_LEVEL=INFO
